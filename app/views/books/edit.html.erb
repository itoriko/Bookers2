<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @book do |f| %>

          <label>Title</label><br>
          <div class="field"><%= f.text_field :title %></div><br>

          <label>Body</label><br>
          <div class="field"><%= f.text_area :body %></div><br>

          <div class="actions"><%= f.submit 'Update Book', class: "btn btn-sm btn-success" %></div><br>

        <% end %>
        <p>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
        </p>
      </div>
    </div>
  </div>
</main>