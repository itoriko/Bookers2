<h2>User info</h2>
        <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image, size: "100x100" %>
        <% else %>
        <%= image_tag 'default-image.jpg', size: "100x100" %>
        <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
	        <th>name</th>
	        <th><%= user.name %></th>
	        </tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fa-solid fa-user-gear" style="color: #676565;"></i>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :opinion %><br>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
      </div>
      <% end %>