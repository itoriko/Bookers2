<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
    <%= form_with model: @user do |f| %>

    <label class="mb-2">Name</label><br>
    <%= f.text_field :name %><br>

    <label class="mb-2">Image</label><br>
    <%= f.file_field :profile_image, accept: "image/*" %><br>

    <label class="mb-2">Introduction</label><br>
    <%= f.text_area :introduction %><br>

    <%= f.submit 'Update User',class: 'btn btn-secondary'%>

    <% end %>

    </div>
  </div>
</div>
</div>
